{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "rules": {
      "no-console": false,
      "semicolon": [true, "always"],
      "quotemark": [true, "single", "avoid-escape"],
      "typedef": [
        true,
        "call-signature",
        "parameter",
        "arrow-parameter",
        "property-declaration",
        "variable-declaration",
        "member-variable-declaration",
        "object-destructuring",
        "array-destructuring"
      ]
    }
  }